{% extends 'base.html.twig' %}

{% block title %}Retraite{% endblock %}

{% block body %}

<div class="container mt-4">


    <h1>Retraite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ retrait.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ retrait.name }}</td>
            </tr>
             <tr>
                <th>Destination</th>
                <td>{{ retrait.Destination }}</td>
            </tr>
             <tr>
                <th>Durée</th>
                <td>{{ retrait.Duree }}</td>
            </tr>
             <tr>
                <th>Description</th>
                <td>{{ retrait.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ retrait.price }}</td>
            </tr>
             <tr>
                <th>Places disponibles</th>
                <td>{{ retrait.stock }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>><img src="{{ asset('img/upload/' ~ retrait.image) }}" alt="" width="10 0"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_retraite_index') }}">retour à la liste</a>

    <a href="{{ path('app_retraite_edit', {'id': retrait.id}) }}">modifier</a>

    {{ include('admin/retraite/_delete_form.html.twig') }}

    </div>
{% endblock %}
